generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Post {
  id        Int       @id @default(autoincrement())
  title     String
  content   String
  authorId  Int @default(autoincrement())
  authorName String
  authPic   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  comments  Comments[] // เพิ่มความสัมพันธ์กับ Comment
}

model User {
  id             Int      @id @default(autoincrement())
  auth0Id        String   @unique
  email          String   @unique
  username       String?
  profilePicture String?
  aboutMe        String?
  displayname    String?
}

model Comments { // เปลี่ยนชื่อโมเดลเป็น Comment แทน Comments
  id        Int      @id @default(autoincrement())
  postId    Int      // ฟิลด์สำหรับเชื่อมโยงกับ Post
  post      Post     @relation(fields: [postId], references: [id]) // ความสัมพันธ์กับ Post
  content   String
  authorName String
  authPic   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


